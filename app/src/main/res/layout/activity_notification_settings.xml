<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Fixed Header Section with Gradient Background -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbar_home"
        android:padding="@dimen/spacing_16"
        android:elevation="@dimen/header_elevation">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvBackLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/back_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <!-- Content Container with Icon and Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Notification Icon (same style as other settings headers) -->
            <ImageView
                android:id="@+id/iconNotification"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="12dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#74EFF6FF"
                android:src="@drawable/ic_notification"
                app:tint="@color/white"
                android:contentDescription="@string/notification_settings_title" />

            <!-- Text Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notification_settings_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h2" />

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xxxsmall"
                    android:text="@string/notification_settings_subtitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_button"
                    android:alpha="0.9" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Scrollable Content Below Header -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerSection"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- Allow notifications card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="@dimen/corner_radius_14"
                app:cardElevation="@dimen/card_elevation">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_16">

                    <LinearLayout
                        android:id="@+id/text_container_notif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/switch_enable_notifications"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="@dimen/spacing_16"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_notifications"
                            android:textStyle="bold"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/allow_notifications_desc"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginTop="@dimen/spacing_xxxsmall" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_enable_notifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:showText="false"
                        android:textOn=""
                        android:textOff=""
                        app:thumbTint="@color/switch_thumb_color"
                        app:trackTint="@color/switch_track_color" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ringtone Preview card (read-only, just for listening) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/group_ringtone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cardCornerRadius="@dimen/corner_radius_14"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ringtone_title"
                                android:textStyle="bold"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/text_size_normal" />

                            <TextView
                                android:id="@+id/tvRingtoneName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ringtone_default"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/text_size_small"
                                android:layout_marginTop="@dimen/spacing_xxxsmall" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnPreviewRingtone"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_ringtone"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/chip_bg_light"
                            app:tint="@color/primary_blue"
                            android:contentDescription="@string/preview_ringtone"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
