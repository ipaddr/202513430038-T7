<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Circular background layers for clock icon -->
    <View
        android:id="@+id/circleOuter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_circular_blue_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <View
        android:id="@+id/circleMiddle"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bg_circular_blue_medium"
        app:layout_constraintTop_toTopOf="@id/circleOuter"
        app:layout_constraintBottom_toBottomOf="@id/circleOuter"
        app:layout_constraintStart_toStartOf="@id/circleOuter"
        app:layout_constraintEnd_toEndOf="@id/circleOuter" />

    <View
        android:id="@+id/circleInner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_circular_blue_dark"
        app:layout_constraintTop_toTopOf="@id/circleMiddle"
        app:layout_constraintBottom_toBottomOf="@id/circleMiddle"
        app:layout_constraintStart_toStartOf="@id/circleMiddle"
        app:layout_constraintEnd_toEndOf="@id/circleMiddle" />

    <ImageView
        android:id="@+id/emptyIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_riwayat"
        android:contentDescription="@string/clock_icon_desc"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/circleInner"
        app:layout_constraintBottom_toBottomOf="@id/circleInner"
        app:layout_constraintStart_toStartOf="@id/circleInner"
        app:layout_constraintEnd_toEndOf="@id/circleInner" />

    <TextView
        android:id="@+id/emptyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_history_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/circleOuter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/emptyMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/empty_history_message"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondary"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/emptyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

