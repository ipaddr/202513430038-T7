<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_background"
    android:padding="0dp">

    <!-- Header (same as previous) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_home_rounded"
        android:elevation="@dimen/header_elevation"
        android:padding="@dimen/spacing_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/konsultasi_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_small"
            android:layout_gravity="center"
            android:text="@string/konsultasi_title"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_h1"
            app:layout_constraintEnd_toStartOf="@id/profileIcon"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/konsultasi_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/konsultasi_subtitle"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toStartOf="@+id/profileIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/konsultasi_title" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="2dp"
            android:src="@drawable/ic_profil_v2"
            android:contentDescription="@string/app_logo_description"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            app:layout_constraintTop_toTopOf="@id/konsultasi_title"
            app:layout_constraintBottom_toBottomOf="@id/konsultasi_subtitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:src="@drawable/ic_obat"
            android:padding="@dimen/drawable_padding"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/overlay_white_20"
            android:contentDescription="@string/app_logo_description"
            app:layout_constraintTop_toBottomOf="@id/konsultasi_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_xlarge" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content: reuse the same inner layout from activity_main -->
        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_xlarge">

            <!-- ... here we use the same inner card UI as before; keep ids so HomeFragment logic works -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_20"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_inner_padding">

                    <TextView
                        android:id="@+id/textKeluhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:paddingVertical="@dimen/spacing_small"
                        android:text="@string/apa_keluhan"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_normal" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupKeluhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:singleLine="false">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_sakit_kepala" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_batuk" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_demam" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_flu" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_sakit_perut" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MedZone.Chip"
                            android:checkable="false"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/chip_pusing" />

                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autofillHints="keluhan"
                        app:cardCornerRadius="@dimen/corner_radius_14"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/muted_text"
                        app:strokeWidth="@dimen/chip_stroke_width"
                        app:useCompatPadding="true">

                        <EditText
                            android:id="@+id/inputKeluhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints="emailAddress"
                            android:background="@color/input_bg"
                            android:gravity="top|start"
                            android:hint="@string/hint_input_keluhan"
                            android:inputType="textMultiLine|textCapSentences"
                            android:lineHeight="@dimen/line_height_24"
                            android:lines="3"
                            android:maxLines="3"
                            android:padding="@dimen/drawable_padding"
                            android:scrollHorizontally="false"
                            android:textColorHint="@color/hint_color"
                            android:textSize="@dimen/text_size_normal" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/resultCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:cardCornerRadius="@dimen/corner_radius_16"
                        app:cardElevation="0dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/chip_bg_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_inner_padding">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/resultIcon"
                                    android:layout_width="@dimen/result_icon_size"
                                    android:layout_height="@dimen/result_icon_size"
                                    android:src="@drawable/ic_obat"
                                    android:contentDescription="@string/app_logo_description"
                                    app:tint="@color/primary_blue" />

                                <TextView
                                    android:id="@+id/resultTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacing_small"
                                    android:text="@string/rekomendasi_obat"
                                    android:textColor="@color/text_dark"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/text_size_normal" />

                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                app:cardCornerRadius="@dimen/corner_radius_12"
                                app:cardElevation="0dp"
                                app:cardUseCompatPadding="true"
                                android:background="@android:color/white">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/card_inner_padding">

                                    <TextView
                                        android:id="@+id/result_obat_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/text_dark"
                                        android:textSize="@dimen/text_size_normal"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/result_obat_dosis"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/spacing_small"
                                        android:text=""
                                        android:textColor="@color/muted_gray_6B"
                                        android:textSize="@dimen/text_size_terms" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSearchObat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:enabled="false"
                        android:gravity="center"
                        android:padding="@dimen/drawable_padding"
                        android:text="@string/btn_search_obat"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_button"
                        android:textStyle="bold"
                        android:background="@drawable/button_rounded"
                        app:icon="@drawable/ic_search"
                        app:iconTint="@color/white"
                        app:iconPadding="@dimen/spacing_small"
                        app:iconGravity="textStart"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- warning card -->
            <com.google.android.material.card.MaterialCardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xlarge"
                android:backgroundTint="@color/warning_bg"
                app:cardCornerRadius="@dimen/corner_radius_16"
                app:cardElevation="0dp"
                app:strokeColor="@color/warn_border"
                app:strokeWidth="@dimen/chip_stroke_width"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_19">

                    <ImageView
                        android:layout_width="@dimen/icon_40"
                        android:layout_height="@dimen/icon_40"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:contentDescription="@string/app_logo_description"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_warning" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineHeight="@dimen/line_height_24"
                        android:text="@string/warning_message"
                        android:textColor="@color/warning_text"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
