<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginEnd="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_large"
    app:cardCornerRadius="@dimen/corner_radius_16"
    app:cardElevation="@dimen/header_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_inner_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDoctorIcon"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:contentDescription="@string/doctor_icon_desc"
                android:src="@drawable/ic_kalender" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xsmall"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_dark" />

            <ImageView
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                android:contentDescription="@string/clock_icon_desc"
                android:src="@drawable/ic_riwayat" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xsmall"
                android:text=""
                android:textColor="@color/gray_dark" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvKeluhanLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/keluhan_label"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/textColorPrimary" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupKeluhanItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:chipSpacingHorizontal="@dimen/spacing_small" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recommendationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:backgroundTint="@color/chip_bg_light"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/corner_radius_12"
            app:cardElevation="@dimen/zero"
            app:cardPreventCornerOverlap="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_medium">

                <ImageView
                    android:id="@+id/ivMedicineIcon"
                    android:layout_width="@dimen/icon_small"
                    android:layout_height="@dimen/icon_small"
                    android:contentDescription="@string/medicine_icon_desc"
                    android:src="@drawable/ic_obat"
                    app:tint="@color/primary_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvRecommendationLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="@string/rekomendasi_obat"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintBottom_toBottomOf="@id/ivMedicineIcon"
                    app:layout_constraintStart_toEndOf="@id/ivMedicineIcon"
                    app:layout_constraintTop_toTopOf="@id/ivMedicineIcon" />

                <LinearLayout
                    android:id="@+id/recommendationList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivMedicineIcon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
