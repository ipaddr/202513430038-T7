<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="@dimen/corner_radius_12"
    app:cardElevation="3dp"
    android:translationZ="1dp"
    android:clipToPadding="false"
    android:outlineAmbientShadowColor="#1A000000"
    android:outlineSpotShadowColor="#1A000000"
    app:strokeWidth="@dimen/chip_stroke_width"
    app:strokeColor="#E5E7EB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="@dimen/icon_40"
            android:layout_height="@dimen/icon_40"
            android:contentDescription="@string/app_logo_description"
            android:padding="10dp"
            android:src="@drawable/ic_profil"
            android:background="@drawable/circle_bg"
            android:backgroundTint="#EFF6FF"
            app:tint="@color/primary_blue" />

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="Menu"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/menuChevron"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:src="@drawable/ic_arrow"
            android:contentDescription="@string/app_logo_description"
            app:tint="@color/muted_gray_6B" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

