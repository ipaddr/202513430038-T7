<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Reusable widget styles that use the bundled Arial font -->
    <style name="CustomTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="CustomEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Custom Chip Style with Blue Color -->
    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipStrokeColor">@color/primary_blue</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
    </style>

</resources>
